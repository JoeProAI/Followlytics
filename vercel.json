{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/cron/daily-snapshots",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/monitor-competitors",
      "schedule": "0 */6 * * *"
    }
  ]
}
