{
  "manifest_version": 3,
  "name": "Followlytics X Session Capturer",
  "version": "1.0",
  "description": "Capture your X.com session for Followlytics follower scanning",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "https://followlytics-zeta.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Capture X Session"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
